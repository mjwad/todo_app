<h1>Create New Table</h1>
<% if @todo.errors.any?%>
    <h3>Following are the error that are occuring due to Incorrect Params</h3>
    <ul>
    <% @todo.errors.full_messages.each do |msg|%>
    <li><%=msg%></li>
    <%end%>
    </ul>
<%end%>
<%= form_for @todo do |f|%>
    <p>
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :description, "Description"%> <br>
        <%= f.text_area  :description%>
    </p>

    <p>
        <%= f.submit "Submit"%>
    </p>
<%end%>
